<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="318dp"
        android:layout_height="44dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="605dp"
        android:fontFamily="sans-serif-black"
        android:text="General Knowledge Quiz!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="545dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="129dp"
        android:text="Start!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="373dp"
        android:background="#FFF3E0"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome! This is a general knowledge quizz. You will be presented with 5 questions. Answer to the best of your knowledge and enjoy!"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
